{% extends 'base.html.twig' %}

{% block title %}{% trans %}user{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}user{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{% trans %}back.to.list{% endtrans %}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{% trans %}edit.user{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
